# Example environment variables
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# MongoDB connection string
MONGO_URI=mongodb://127.0.0.1:27017/hayat-agi

# JWT configuration
# Backward-compatible legacy secret (used if JWT_ACCESS_SECRET is not set)
JWT_SECRET=change-this

# Access token
JWT_ACCESS_SECRET=change-this-access
JWT_ACCESS_EXPIRES=15m

# Refresh token
JWT_REFRESH_SECRET=change-this-refresh
JWT_REFRESH_EXPIRES=7d

# Cookies
COOKIE_SECURE=false

# (Optional) MQTT configuration
MQTT_URL=mqtt://localhost:1883
MQTT_TOPIC=gateways/+/status
